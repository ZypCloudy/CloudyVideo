<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--标题栏-->
    <include layout="@layout/titlebar"/>

    <com.youth.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    <!--FrameLayout-->

    <FrameLayout
            android:id="@+id/fl_main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    <!--RadioGroup-->

    <RadioGroup
            android:id="@+id/rg_bottom_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#11000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp"

    >


        <RadioButton
                android:id="@+id/rb_video"
                android:text="推荐"
                android:drawableTop="@drawable/rb_recommend_drawable_selector"
                style="@style/bottom_style"
        />


        <RadioButton
                android:id="@+id/rb_audio"
                android:text="频道"
                android:drawableTop="@drawable/rb_channel_drawable_selector"
                style="@style/bottom_style"
        />


        <RadioButton
                android:id="@+id/rb_net_video"
                android:text="下载"
                android:drawableTop="@drawable/rb_download_drawable_selector"
                style="@style/bottom_style"
        />


        <RadioButton
                android:id="@+id/rb_netaudio"
                android:text="我的"
                android:drawableTop="@drawable/rb_mine_drawable_selector"
                style="@style/bottom_style"
        />


    </RadioGroup>

</LinearLayout>